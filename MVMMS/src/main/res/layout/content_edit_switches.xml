<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f8ff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.akla.login.EditSwitches"
    tools:showIn="@layout/app_bar_edit_switches">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="ලංකා විදුලිබල මණ්ඩලය"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:gravity="center"
            android:text="இலங்கை மின்சார சபை"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textViewE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:gravity="center"
            android:text="Ceylon Electricity Board"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/darker_gray"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewE"
            android:layout_alignParentTop="true"
            android:layout_marginTop="120dp"
            android:gravity="center_horizontal"
            android:text="Edit Switches"
            android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etLineID"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/textView20"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_horizontal"
            android:layout_toEndOf="@+id/textView2"
            android:layout_toRightOf="@+id/textView11"
            android:background="@drawable/rounded_edittext"
            android:editable="false"
            android:ems="10"
            android:entries="@array/complaint_nature"
            android:gravity="center"
            android:hint="Enter ID"
            android:inputType="text|number"
            android:spinnerMode="dialog"
            android:textAlignment="center"
            android:textSize="15dp"
            android:visibility="invisible"
            tools:ignore="RtlCompat" />

    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayoutEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPagerEdit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabLayoutEdit">

    </android.support.v4.view.ViewPager>

</android.support.constraint.ConstraintLayout>