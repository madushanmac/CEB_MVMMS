            <TextView
                android:id="@+id/textViewType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView11"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="20dp"
                android:text="Type"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="20sp" />


            <Spinner
                android:id="@+id/SpinnerType"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/textViewType"
                android:layout_alignStart="@+id/textViewType"
                android:layout_alignLeft="@+id/textViewType"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:entries="@array/Type1"
                android:gravity="center"
                android:hint="Type"
                android:inputType="textCapSentences|textMultiLine"
                android:selectAllOnFocus="true"
                android:singleLine="false"
                android:spinnerMode="dialog"
                android:textAlignment="center"
                android:textSize="15dp"
                tools:ignore="RtlCompat" />



            <TextView
                android:id="@+id/textViewSamplingPort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/SpinnerType"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:text="Sampling Port"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etSamplingPort"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/textViewSamplingPort"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/rounded_edittext"
                android:gravity="center"
                android:hint="Sampling Port"
                android:inputType="text"
                android:textSize="15dp"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/textViewExtracted_from_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etSamplingPort"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:text="Extracted from top"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etExtracted_from_top"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/textViewExtracted_from_top"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/rounded_edittext"
                android:gravity="center"
                android:hint="Extracted from top"
                android:inputType="text"
                android:textSize="15dp"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/textViewSamplingLogicSatisfied"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etExtracted_from_top"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:text="Sampling Logic Satisfied"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etSamplingLogicSatisfied"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/textViewSamplingLogicSatisfied"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/rounded_edittext"
                android:gravity="center"
                android:hint="Sampling Logic Satisfied"
                android:inputType="text"
                android:textSize="15dp"
                tools:ignore="RtlCompat" />


            <TextView
                android:id="@+id/textViewSampleNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etSamplingLogicSatisfied"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:text="Sample Number"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etSampleNumber"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/textViewSampleNumber"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/rounded_edittext"
                android:gravity="center"
                android:hint="Sample Number"
                android:inputType="text"
                android:textSize="15dp"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/textViewSampleDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
